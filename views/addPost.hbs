<h1 class="addTitle">Create New Post</h1>



 {{#if errorAdd }}
    <div class="erDiv">
        <p class="errorAdd">{{errorAdd}}</p>
    </div>
    <form action="/addPost" method="POST"  enctype="multipart/form-data" class="login_windows">

        <label for="titel" >Title:</label>
        
        <input type="text" name="title" id="title" class="input">
        
        <label for="description" class="text_input">Description:</label>
        
        <input type="text" name="description" id="description" class="input">
        
        <label for="tag" class="text_input">Tag:</label>
        
        <input type="text"  name="tag" id="tag" class="input" >
        
        <input type="file" name="filedata">
        
        <button type="submit" class="btn btn-sm btn-outline-secondary">Add Post</button>

    </form>

    {{else}}

